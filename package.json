{
  "name": "escaping-kotatsu-console",
  "version": "0.0.1",
  "description": "We make possible escaping of Kotatsu for Shinshu residents!",
  "main": "src/index.ts",
  "repository": "https://github.com/escaping-kotatsu/escaping-kotatsu-api",
  "author": "Motone Adachi <waricoma@devne.co>",
  "private": true,
  "engines": {
    "yarn": ">=1.22.4",
    "node": "16.4.2"
  },
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "build": "yarn pkg && yarn build-api",
    "build-api": "tsc",
    "build-vue": "cd ./vue/ && yarn build",
    "commit": "git cz",
    "lint": "tsc --noEmit && eslint ./src/*.ts --config ./.eslintrc.js --no-ignore --cache --color",
    "ignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o ./.gitignore",
    "readme": "npx readme-md-generator",
    "doc": "typedoc --plugin typedoc-plugin-markdown --out ./docs/ ./src/*.ts && npx madge --image ./graph.svg ./src/index.ts",
    "start": "node ./dist/index.js",
    "watch": "nodemon ./src/index.ts",
    "quick": "ts-node ./src/index.ts",
    "test": "jest",
    "test:debug": "jest --watch",
    "pkg": "export YARN_PRODUCTION=false && yarn pkg-express && yarn pkg-vue",
    "pkg-express": "yarn",
    "pkg-vue": "cd ./vue && yarn"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji-japanese"
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.3",
    "express-session": "^1.17.2",
    "graphql": "^16.0.1",
    "helmet": "^4.6.0",
    "humps": "^2.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "pino": "^7.1.0",
    "ts-node": "^10.6.0",
    "typeorm": "^0.2.45",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express-http-proxy": "^1.6.3",
    "@types/express-session": "^1.17.4",
    "@types/humps": "^2.0.1",
    "@types/jest": "26.0.19",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "commitizen": "^4.2.4",
    "cz-emoji-japanese": "^1.0.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "madge": "^5.0.1",
    "nodemon": "^2.0.15",
    "only-allow": "^1.0.0",
    "prettier": "^2.5.1",
    "readme-md-generator": "^1.0.0",
    "sort-package-json": "^1.53.1",
    "ts-jest": "^27.1.2",
    "typedoc": "^0.22.12",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.5.4"
  }
}
